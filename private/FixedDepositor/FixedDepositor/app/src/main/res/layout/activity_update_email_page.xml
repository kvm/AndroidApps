<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pheonixlabs.srkuruma.fixeddepositor.UpdateEmailPage">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/OldEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Old Email"
            android:textAlignment="center"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/NewEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="New Email"
            android:textAlignment="center"
            android:layout_below="@+id/OldEmail"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/ConfirmEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Confirm New Email"
            android:textAlignment="center"
            android:layout_below="@+id/NewEmail"
            android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/UpdatePasswordButton"
            android:textAlignment="gravity"
            android:text="Update"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_below="@+id/ConfirmEmail"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:onClick="UpdateEmail"/>
    </RelativeLayout>
</RelativeLayout>
